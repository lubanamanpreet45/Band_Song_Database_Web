@page
@model Band_Song_Database_Web.Pages.Producers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Producers</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">+Add Producer</a>
</p>
<table class="table table-striped table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Producer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer[0].WebSite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Producer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebSite)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
