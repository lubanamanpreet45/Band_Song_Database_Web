@page
@model Band_Song_Database_Web.Pages.Albums.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Albums</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">+Add Albums</a>
</p>
<table class="table table-striped table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].AlbumName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Album) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
